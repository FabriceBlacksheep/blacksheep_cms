{% extends 'page.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
<div class="container-fluid bg-white mt-4">
    <h4>Liste des catégories</h4>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.title }}</td>
                <td>
                       <a class="btn btn-success" href="{{ path('app_category_show', {'id': category.id}) }}"><i class="fa fa-eye"></i></a>
                    <a class="btn btn-warning"href="{{ path('app_category_edit', {'id': category.id}) }}"><i class="fa fa-pen"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucune catégorie :(</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-secondary" href="{{ path('app_category_new') }}">Créer une catégorie</a>
   </div>
{% endblock %}
