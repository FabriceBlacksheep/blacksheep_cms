{% extends 'page.html.twig' %}
{% block title %}User{% endblock %}

{% block body %}
<div class="container-fluid my-4 p-4 bg-white">
    <h4>Utilisateur</h4>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            {# nom #}
            <tr>
                <th>Nom</th>
                <td>{{ user.nom }}</td>

            <tr>
            {# prenom #}
                <th>Prenom</th>
                <td>{{ user.prenom }}</td>

            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            {# <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr> #}
        </tbody>
    </table>

<a class="btn btn-sm btn-secondary" href="{{ path('app_user_index') }}">Retour</a>
</div>
{% endblock %}
