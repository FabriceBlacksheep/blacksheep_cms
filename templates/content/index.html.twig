{% extends 'page.html.twig' %}
{% block title %}Content index{% endblock %}

{% block body %}
<div class="container-fluid bg-white mt-4">
    <h1>Content index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>H1</th>
                <th>Slug</th>
                <th>Visuel</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for content in contents %}
            <tr>
                <td>{{ content.id }}</td>
                <td>{{ content.title }}</td>
                <td>{{ content.description }}</td>
                <td>{{ content.h1 }}</td>
                <td>{{ content.slug }}</td>
                <td>{{ content.visuel }}</td>
                <td>
                    <a href="{{ path('app_content_show', {'id': content.id}) }}">show</a>
                    <a href="{{ path('app_content_edit', {'id': content.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_content_new') }}">Create new</a>
    </div>
{% endblock %}
