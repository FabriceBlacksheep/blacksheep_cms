{% extends 'page.html.twig' %}

{% block title %}Agence index{% endblock %}

{% block body %}
<div class="container-fluid my-4 p-4 bg-white">
    <h4>Gestion des Agences</h4>

    {# flash message #}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    {# flash message #}
    {% for message in app.flashes('danger') %}
        <div class="alert alert-danger">
            {{ message }}
        </div>
    {% endfor %}

    {# flash message #}
    {% for message in app.flashes('warning') %}
        <div class="alert alert-warning">
            {{ message }}
        </div>
    {% endfor %}

    {# flash message #}
    {% for message in app.flashes('info') %}
        <div class="alert alert-info">
            {{ message }}
        </div>
    {% endfor %}

    {# flash message #}
    {% for message in app.flashes('primary') %}
        <div class="alert alert-primary">
            {{ message }}
        </div>
    {% endfor %}

    {# flash message #}
    {% for message in app.flashes('secondary') %}
        <div class="alert alert-secondary">
            {{ message }}
        </div>
    {% endfor %}

    {# flash message #}
    {% for message in app.flashes('light') %}
        <div class="alert alert-light">
            {{ message }}
        </div>
    {% endfor %}

    {# flash message #}
    {% for message in app.flashes('dark') %}
        <div class="alert alert-dark">
            {{ message }}
        </div>
    {% endfor %}

    {# flash message #}
    {% for message in app.flashes('link') %}
        <div class="alert alert-link">
            {{ message }}
        </div>
    {% endfor %}

    {# flash message #}
    {% for message in app.flashes('white') %}
        <div class="alert alert-white">
            {{ message }}
        </div>
    {% endfor %}

    {# flash message #}
    {% for message in app.flashes('black') %}
        <div class="alert alert-black">
            {{ message }}
        </div>
    {% endfor %}

    {# flash message #}
    {% for message in app.flashes('muted') %}
        <div class="alert alert-muted">
            {{ message }}
        </div>
    {% endfor %}

    <table class="table">
        <thead>
            <tr>
                <th>Statut</th>
                <th>Nom</th>
                <th>IdLocpro</th>
{# type #}
                <th>Type</th>
                {# <th>Description</th> #}
                <th>Visuel</th>
                <th>Email</th>
                {# City #}
                 <th>Adresse</th>

                <th>Localisation</th>
                <th>Telephone</th>
                <th>Horaires</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for agence in agences %}
            <tr>
                <td>

                {% if agence.active == 0 %}
                    <span class="badge bg-success">ACTIVE</span>
                {% else %}
                    <span class="badge bg-danger">INACTIVE</span>
                {% endif %}


                </td>
                <td>{{ agence.nom }}</td>
                <td>{{ agence.idLocpro }}</td>
{# type #}
                <td>

                {% for type in agence.type %}
                 {% if type == 'Agence propre' %}
                    <span class="badge bg-success">{{ type }}</span>
                                            {% elseif type == 'Franchise' %}
                            <span class="badge bg-warning">{{ type }}</span>
                        {% endif %}
                {% endfor %}

                </td>

                {# <td>{{ agence.description|striptags|slice(0, 50) }}</td> #}


                <td>

                {# Twig condition if agence.visuel exists #}
                {% if agence.visuel %}
                    <img src="{{ asset('upload/' ~ agence.visuel) }}" alt="agence.visuel" width="50px"/>
                {% else %}
                    Aucun visuel
                {% endif %}

                {# <img src="{{ asset('upload/' ~ agence.visuel) }}" alt="agence.visuel" width="50px"/> #}


                </td>

                <td>{{ agence.email }}</td>

                {# City #}
                <td>{{ agence.adresse }}</td>




                {# access agence City by relation #}





                <td>{{ agence.localisation }}</td>
                <td>{{ agence.telephone }}</td>
                <td>{{ agence.horaires }}</td>
                <td>
                    <a class="btn btn-success" href="{{ path('app_agence_show', {'id': agence.id}) }}"><i class="fa fa-eye"></i></a>
                    <a class="btn btn-warning" href="{{ path('app_agence_edit', {'id': agence.id}) }}"><i class="fa fa-pen"></i></a>

                    {# delete #}

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">Aucune agence :(</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-secondary" href="{{ path('app_agence_new') }}">Cr√©er une agence</a>
    </div>
{% endblock %}
